# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build fastify-api`.
# Modify "docker-build" options in `project.json` to change docker build args.
#
# To run the container: `docker run -p 3000:3000 -t fastify-api`
#
# To use npm instead of pnpm change the line with `pnpm install` to:
# RUN npm --prefix fastify-api --omit=dev -f install

FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN apk add -U \
    python3 \
    g++ \
    make \
    cmake \
    git \
    findutils \
    shadow \
    curl

RUN corepack enable
RUN corepack prepare pnpm@8.7.0 --activate

RUN addgroup --system fastify-api && \
    adduser --system -G fastify-api fastify-api

COPY dist/apps/fastify-api fastify-api
RUN chown -R fastify-api:fastify-api .

# remove this install step if you build with `--bundle` option (as bundled output includes external dependencies)
RUN pnpm --prefix . --prod install

CMD [ "node", "fastify-api" ]
